<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/rowHousesInfo_numberTxt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/bg_gray_strock"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/cabin_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rowHousesInfo_descTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/asap"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="@id/rowHousesInfo_numberTxt"
        app:layout_constraintLeft_toLeftOf="@id/rowHousesInfo_numberTxt"
        app:layout_constraintTop_toBottomOf="@id/rowHousesInfo_numberTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>